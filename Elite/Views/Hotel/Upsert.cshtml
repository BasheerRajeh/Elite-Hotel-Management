@model Elite.AppDbContext.Hotel

@{

    ViewData["Title"] = "Hotel";

    Layout = "~/Views/Shared/_Layout.cshtml";

    var title = "Create Hotel";
}

<section class="section">
    <div class="card">
        <form method="post" asp-action="Upsert" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (Model.Id != 0)
            {
                <input type="hidden" asp-for="Id" />
                title = "Edit Hotel";
            }

            <div class="card-header">
                <h4 class="card-title">@title</h4>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">

                            <div class="form-group row align-items-center">
                                <div class="col-lg-4 col-3">
                                    <label class="col-form-label" asp-for="Name"></label>
                                </div>
                                <div class="col-lg-8 col-9">
                                    <input asp-for="Name" class="form-control">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row align-items-center">
                                <div class="col-lg-4 col-3">
                                    <label class="col-form-label" asp-for="City"></label>
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                                <div class="col-lg-8 col-9">
                                    <input asp-for="City" class="form-control">
                                    <span asp-validation-for="City" class="text-danger"></span>

                                    @*                                    @Html.DropDownListFor(m => m.Hotel.LocationId, Model.LocationList, "- Please select a location -", new { @class = "form-control" })
                                    *@
                                </div>
                            </div>

                            <div class="form-group row align-items-center">
                                <div class="col-lg-4 col-3">
                                    <label class="col-form-label" asp-for="ImageUrl"></label>
                                </div>
                                <div class="col-lg-8 col-9">
                                    <input type="file" name="files" id="uploadBox" asp-for="Name" multiple class="form-control">
                                </div>
                            </div>

                            <div class="form-group row align-items-center">
                                <div class="col-lg-4 col-3">
                                </div>

                                <div class="col-lg-8 col-9">
                                    @if (Model.Id != 0)
                                    {
                                        //Edit button and back to list
                                        <partial name="_EditAndBackToListButton" model="Model.Id" />
                                    }
                                    else
                                    {
                                        <div class="row">
                                            <div class="col">
                                                <button type="submit" onclick="return validateInput()" class="col-lg-12 btn btn-success">Create</button>
                                            </div>

                                            <div class="col">
                                                <a asp-action="Index" class="col-lg-12 btn btn-primary">Back to List</a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            @*                            <label for="basicInput">Basic Input</label>
                                <input type="text" class="form-control" id="basicInput" placeholder="Enter email">
                            *@
                        </div>
                    </div>

                    @if (Model.Id != 0)
                    {
                        <div class="col-sm-12 col-md-5">
                            <img src="@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" alt="Hotel image" />
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</section>

@section Scripts{
    <script>
        function validateInput() {
            if (document.getElementById("uploadBox").value === "") {
                Swal.fire(
                    'Error',
                    'Please Select an Image',
                    'error'
                );
                return false;
            }
            return true;
        }
    </script>
}